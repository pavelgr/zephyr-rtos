# MPU9150 Nine-Axis Motion Tracking device configuration options

# Copyright (c) 2021 Nordic Semiconductor ASA
# Copyright (c) 2024 pck
# SPDX-License-Identifier: Apache-2.0

menuconfig MPU9150
	bool "MPU9150 Nine-Axis Motion Tracking Device (MPU6050 + AK8975)"
	default y
	depends on DT_HAS_INVENSENSE_MPU9150_ENABLED
	select I2C
	help
	  Enable driver for MPU9150 I2C-based nine-axis motion tracking device.

if MPU9150

choice
	prompt "Trigger mode"
	default MPU9150_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config MPU9150_TRIGGER_NONE
	bool "No trigger"

config MPU9150_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	select MPU9150_TRIGGER

config MPU9150_TRIGGER_OWN_THREAD
	bool "Use own thread"
	select MPU9150_TRIGGER

config MPU9150_TRIGGER_DIRECT
	bool "Use IRQ handler"
	select MPU9150_TRIGGER
endchoice

config MPU9150_TRIGGER
	bool

config MPU9150_THREAD_PRIORITY
	int "Own thread priority"
	depends on MPU9150_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of the thread used by the driver to handle interrupts.

config MPU9150_THREAD_STACK_SIZE
	int "Own thread stack size"
	depends on MPU9150_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

config MPU9150_MAGN_EN
	bool "Magnetometer enable"
	default y
	help
	  Enable AK8975 builtin magnetometer.

endif # MPU9150
